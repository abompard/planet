<?xml version="1.0"?>
<rdf:RDF
    xmlns:rdf="http://www.w3.org/1999/02/22-rdf-syntax-ns#"
    xmlns:rdfs="http://www.w3.org/2000/01/rdf-schema#"
    xmlns:foaf="http://xmlns.com/foaf/0.1/"
    xmlns:rss="http://purl.org/rss/1.0/"
    xmlns:dc="http://purl.org/dc/elements/1.1/"
>

<foaf:Group>
    <foaf:name><%= site.name %></foaf:name>
    <foaf:homepage><%= site.url %></foaf:homepage>
    <rdfs:seeAlso rdf:resource="" />

<% site.feeds.each do |feed| %>
    <foaf:member>
        <foaf:Agent>
            <foaf:name><%= CGI.escapeHTML(feed.author) %></foaf:name>
            <foaf:weblog>
                <foaf:Document rdf:about="<%= CGI.escapeHTML(feed.link) %>">
                <dc:title><%= CGI.escapeHTML(feed.name) %></dc:title>
                <rdfs:seeAlso>
                    <rss:channel rdf:about="<%= CGI.escapeHTML(feed.feed) %>" />
                </rdfs:seeAlso>
            </foaf:Document>
        </foaf:weblog>
    </foaf:Agent>
</foaf:member>
<% end %>

</foaf:Group>
</rdf:RDF>
