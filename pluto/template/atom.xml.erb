<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<feed xmlns="http://www.w3.org/2005/Atom">

    <title><%= site.title %></title>
    <link rel="self" href="<%= site.url %>"/>
    <link href="<%= site.url %>"/>
    <id>https://fedoraproject.org/people/rss20.xml</id>
    <updated><%= site.updated.to_datetime.rfc3339 %></updated>
    <generator uri="https://feedreader.github.io/"><%= Pluto.generator %></generator>

    <%
    items = site.items.latest.limit(50)
    ItemCursor.new( items ).each do |item, new_date, new_feed|
    %>
    <entry xml:lang="en">
        <title type="html"xml:lang="en"><%= item.feed.title %><% if item.name %>: <%= item.name %><% end %></title>
        <link href="<%= CGI.escapeHTML(item.url) %>"/>
        <id><%= CGI.escapeHTML(item.guid) %></id>
        <updated><%= item.published.to_datetime.rfc3339 %></updated>
        <content type="html" xml:lang="en">
            <% if item.feed.avatar %>
            &lt;img src=&quot;<%= CGI.escapeHTML(item.feed.avatar) %>&quot; alt=&quot;&quot; style=&quot;float: right;&quot;&gt;
            <% end %>
            <%= CGI.escapeHTML(item.content) %>
        </content>
        <author>
            <% if item.feed.author %>
            <name><%= CGI.escapeHTML(item.feed.author) %></name>
            <% if item.feed.email %>
            <email><%= item.feed.email %></email>
            <% end %>
            <% else %>
            <name><%= CGI.escapeHTML(item.feed.name) %></name>
            <% end %>
            <uri><%= CGI.escapeHTML(item.feed.url) %></uri>
        </author>
        <source>
            <% if item.feed.title %>
            <title type="html"><%= item.feed.title %></title>
            <% end %>
            <% if item.feed.subtitle %>
            <subtitle type="html"><%= item.feed.subtitle %></subtitle>
            <% end %>
            <link rel="self" href="<%= item.feed.url %>"/>
            <id><%= item.feed.url %></id>
            <% if item.feed.updated %>
            <updated><%= item.feed.updated.to_datetime.rfc3339 %></updated>
            <% end %>
        </source>
    </entry>
    <% end %>
</feed>
